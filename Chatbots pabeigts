import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        Scanner scan = new Scanner(System.in);

        System.out.println("Vārds?");

        String user_name = scan.nextLine();

        if (user_name.equals("Marts")) {
            System.out.println("Sveiks, Mart!");
        } else if (user_name.equals("Juris")) {
            System.out.println("Sveiks, Juri!");
        } else {
            System.out.println("Kas tu tāds?");
        }

        System.out.println("Un ko tu gribi?");

        String atbilde = scan.nextLine();

        if (atbilde.equals("Neko")) {
            System.out.println("Uzkūko");
        } else if (atbilde.equals("Kas tu esi?")) {
            System.out.println("Robots!");
        } else {
            System.out.println(" ");
        }

        System.out.println("Vai " + user_name + " vēlas vēl kaut ko zināt?");

        String atbilde2 = scan.nextLine();

        if (atbilde2.equals("Vai tu esi īsts?")) {
            System.out.println("Nē, " +  user_name + ", es esmu Robots!");
        } else if (atbilde2.equals("Vai es esmu īsts?")) {
            System.out.println("Debatable");
        } else {
            System.out.println("Bye!");
        }

        System.out.println("Paldies par jautājumiem!");

        String bye = scan.nextLine();

        if (bye.equals("Bye")) {
                System.out.println("Bye!");
        } else {
            System.out.println("Bye!");
        }
    }
}
