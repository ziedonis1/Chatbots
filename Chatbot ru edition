import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        Scanner scan = new Scanner(System.in);

        System.out.println("Vārds?");

        String user_name = scan.nextLine();

        System.out.println("Sveiks " + user_name + "!");


        System.out.println("Vai vēlies mobilizēties?");

        String atbilde = scan.nextLine();

        if (atbilde.equals("Jā")) {
            System.out.println("Prieks dzirdēt, " + user_name + ", jūsu pieteikums ir pieņemts");
        } else if (atbilde.equals("Nē")) {
            System.out.println("Piedāvājam jums iespēju pārdomāt. :)");
            System.out.println("Vai pārdomājāt?");
        String atbilde2 = scan.nextLine();
        if (atbilde2.equals("Jā")) {
            System.out.println("Prieks dzirdēt, " + user_name + ", jūsu pieteikums ir pieņemts");
        }   else if (atbilde2.equals("Nē")) {
            System.out.println("Jūs esat uz plāna ledus!");
            System.out.println("Vai jūs esat spiegs?");
            String atbilde3 = scan.nextLine();
            if (atbilde3.equals("Jā")) {
                System.out.println("Palieciet kur esat, pie jums tulīt ieradīsies policija.");
                } else if (atbilde3.equals("Nē")) {
                System.out.println("Melis! Palieciet kur esat, pie jums tulīt ieradīsies policija.");
            }
        }
        }
    }
}
